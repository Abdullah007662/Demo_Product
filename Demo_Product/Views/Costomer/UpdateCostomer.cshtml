@model EntityLayer.Concrete.Costomer
@{
    ViewData["Title"] = "UpdateCostomer";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>UpdateCostomer</h1>
<form method="post">
    @Html.Label("Müşteri ID")
    @Html.TextBoxFor(x => x.CostomerID, new { @class = "form-control" })
    <br />
    @Html.Label("Müşteri Adı")
    @Html.TextBoxFor(x => x.CostomerNAme, new { @class = "form-control" })
    <br />
    @Html.Label("Müşteri Şehri")
    @Html.TextBoxFor(x => x.CostomerCity, new { @class = "form-control" })
    <br />
    @Html.Label("Meslek Seçiniz");
    @Html.DropDownListFor(x => x.JobID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
    <br />
    <button class=" btn btn-info">Müşteri Güncelle</button>

</form>

