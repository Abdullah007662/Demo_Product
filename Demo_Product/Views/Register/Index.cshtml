@model Demo_Product.Models.UserRegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Register - SB Admin</title>
    <link href="~/startbootstrap-sb-admin-gh-pages/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Yeni Hesap Oluşturma</h3></div>
                                
                                <div class="card-body">
                                    <form method="post">
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                  <input  class="form-control"name="İsim" type="text"  />
                                                  <label asp-for="İsim">Adınız</label>
                                                  <span   asp-validation-for="İsim"></span>
                                                </div> 
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    <input  class="form-control"  name="Soyİsim" type="text"/>
                                                    <label asp-for="Soyİsim">Soyadınız</label>
                                                    <span  asp-validation-for="Soyİsim"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input  class="form-control" name="Mail" id="inputEmail" type="email"  />
                                            <label asp-for="Mail">Email Adresiniz</label>
                                            <span  asp-validation-for="Mail"></span>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input  class="form-control" name="KulAD" type="text" />
                                            <label asp-for="KulAD">Kullanıcı Adı</label>
                                            <span asp-validation-for="KulAD"></span>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input  class="form-control" name="Şifre"  type="password"  />
                                                    <label asp-for="Şifre">Şifre</label>
                                                    <span asp-validation-for="Şifre"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" name="ŞifreTekrar"  type="password"  />
                                                    <label asp-for="ŞifreTekrar">Şifre Tekrar</label>
                                                    <span asp-validation-for="ŞifreTekrar"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="text-bg-danger" asp-validation-summary="ModelOnly"></div>
                                        <button class="btn btn-primary btn-block">Hesap Oluştur</button>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a href="login.html">Zaten Bir Hesabınız Var mı ? Oturum Açınız.</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; @DateTime.Now.Year Tüm Hakları Saklıdır</div>
                        <div>
                            <a href="#">Gizlilik</a>
                            &middot;
                            <a href="#">Kurallar &amp; Şartlar</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/startbootstrap-sb-admin-gh-pages/js/scripts.js"></script>
</body>
</html>




