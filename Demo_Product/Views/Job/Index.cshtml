@using EntityLayer.Concrete
@model List<Job>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th style="color:red">Meslek Adı</th>
        <th style="color:red">Sil</th>
        <th style="color:red">Güncelle</th>
        <th style="color:red">Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.JobID</td>
            <td>@item.Name</td>
            <td><a href="/Job/DeleteJob/@item.JobID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Job/UpdateJob/@item.JobID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Job/DetailsJob/@item.JobID" class="btn btn-primary">Detaylar</a></td>
        </tr>
    }

</table>



