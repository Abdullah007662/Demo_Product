@using EntityLayer.Concrete
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th style="color:red">Ürün Adı</th>
        <th style="color:red">Fiyat</th>
        <th style="color:red">Stok</th>
        <th style="color:red">Sil</th>
        <th style="color:red">Güncelle</th>
    </tr>
    @foreach(var item in Model)
    { 
        <tr>
            <td>@item.ProductId</td>
            <td>@item.ProductName</td>
            <td>@item.ProductPrice</td>
            <td>@item.ProductStock</td>
            <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>

